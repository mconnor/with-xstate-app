{
  "compilerOptions": {
    "target": "es5",
    "importHelpers": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict":  false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
        "@components/*": [
            "components/*"
        ],
        "@types/*": [
            "types/*"
        ],
        "@machines/*": [
            "machines/*"
        ]
    },
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
